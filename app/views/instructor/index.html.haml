%h1 &nbsp;Instructors List

%p.text-left
  = link_to "Combine Instructors", combine_instructor_index_path(), class: "btn btn-primary"

%h3 &nbsp;&nbsp;Current
.row
  .col-md-4
    %ul
    = form_tag instructor_index_path, method: :post do
      - inst_list("status = 'Current'").each  do |instructor|
        = check_box_tag "instructor_ids[]", instructor.id
        = link_to put_last_name(instructor.name), instructor_path(id: instructor.id)
        %br
      %br
      = select_tag :status, options_for_select(["Inactive", "Current", "Courtesy"], "Current"), class: "form-control"
      %br
      = submit_tag "Update", class: "btn btn-primary"
        
        
